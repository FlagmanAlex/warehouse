{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@warehouse/interfaces": ["../interfaces"],
      "@warehouse/config": ["../config"],
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}